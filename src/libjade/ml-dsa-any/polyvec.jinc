}

fn _polyvecl_add_inplace(
  reg ptr u32[polyvecl] z,
  reg ptr u32[polyvecl] y  
) -> reg ptr u32[polyvecl] 
{
  inline int i;
  reg ptr u32[N] pz;
  reg ptr u32[N] py;  
  for i = 0 to L {
    py = y[i * N : N];
    pz = z[i * N : N];
    z[i * N : N] = _poly_add_inplace(pz, py);
  }
  return z;
}

